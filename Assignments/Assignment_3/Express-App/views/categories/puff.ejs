<!-- Puff Category Page -->
<div class="container mt-5 pt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Puffs</li>
        </ol>
    </nav>

    <h1 class="mb-4">Our Puff Collection</h1>

    <div class="row">
        <div class="col-md-3">
            <!-- Category Filter Sidebar -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/categories/puff/all" class="list-group-item list-group-item-action  <%= currentCategory === 'all' ? 'active' : '' %>"">All Puffs</a>
                    <a href="/categories/puff/vegetable" class="list-group-item list-group-item-action">Vegetable</a>
                    <a href="/categories/puff/chicken" class="list-group-item list-group-item-action">Chicken</a>
                    <a href="/categories/puff/cheese" class="list-group-item list-group-item-action">Cheese</a>
                    <a href="/categories/puff/special" class="list-group-item list-group-item-action">Special</a>
                </div>
            </div>

            <!-- Price Filter -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Filter by Price</h5>
                </div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priceRange" id="price1" value="0-50">
                        <label class="form-check-label" for="price1">
                            Under Rs. 50
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priceRange" id="price2" value="50-100">
                        <label class="form-check-label" for="price2">
                            Rs. 50 - Rs. 100
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priceRange" id="price3" value="100+">
                        <label class="form-check-label" for="price3">
                            Above Rs. 100
                        </label>
                    </div>
                </div>
            </div>

            <!-- Filling Type -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Filling Type</h5>
                </div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="vegetable" id="fillingVegetable">
                        <label class="form-check-label" for="fillingVegetable">
                            Vegetable
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="chicken" id="fillingChicken">
                        <label class="form-check-label" for="fillingChicken">
                            Chicken
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="cheese" id="fillingCheese">
                        <label class="form-check-label" for="fillingCheese">
                            Cheese
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="mushroom" id="fillingMushroom">
                        <label class="form-check-label" for="fillingMushroom">
                            Mushroom
                        </label>
                    </div>
                </div>
            </div>

            <!-- Size -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Size</h5>
                </div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="size" id="sizeRegular" value="regular">
                        <label class="form-check-label" for="sizeRegular">
                            Regular
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="size" id="sizeMini" value="mini">
                        <label class="form-check-label" for="sizeMini">
                            Mini
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="size" id="sizeParty" value="party">
                        <label class="form-check-label" for="sizeParty">
                            Party Size
                        </label>
                    </div>
                </div>
            </div>

            <!-- Dietary Options -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Dietary Options</h5>
                </div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="vegetarian" id="dietVegetarian">
                        <label class="form-check-label" for="dietVegetarian">
                            Vegetarian
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="spicy" id="dietSpicy">
                        <label class="form-check-label" for="dietSpicy">
                            Spicy
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Products Grid -->
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% if (locals.products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col">
                            <div class="card h-100">
                                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.name %></h5>
                                    <p class="card-text"><%= product.description %></p>
                                    <div class="mb-2">
                                        <span class="badge bg-primary"><%= product.filling %></span>
                                        <span class="badge bg-info"><%= product.size %></span>
                                        <% if (product.isVegetarian) { %>
                                            <span class="badge bg-success">Vegetarian</span>
                                        <% } %>
                                        <% if (product.isSpicy) { %>
                                            <span class="badge bg-danger">Spicy</span>
                                        <% } %>
                                    </div>
                                    <p class="card-text"><strong>Rs. <%= product.price %></strong></p>
                                    <button class="btn btn-primary add-to-cart" data-product-id="<%= product._id %>">
                                        Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info">
                            No products available in this category.
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Add to Cart Success Modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Item has been added to your cart.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Continue Shopping</button>
                <a href="/cart" class="btn btn-primary">View Cart</a>
            </div>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', async (e) => {
        const productId = e.target.dataset.productId;
        try {
            const response = await fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId })
            });
            if (response.ok) {
                const modal = new bootstrap.Modal(document.getElementById('addToCartModal'));
                modal.show();
            }
        } catch (error) {
            console.error('Error adding to cart:', error);
        }
    });
});

// Filter functionality
function applyFilters() {
    const fillings = Array.from(document.querySelectorAll('input[id^="filling"]:checked'))
        .map(cb => cb.value);
    const dietary = Array.from(document.querySelectorAll('input[id^="diet"]:checked'))
        .map(cb => cb.value);
    const size = document.querySelector('input[name="size"]:checked')?.value;
    const priceRange = document.querySelector('input[name="priceRange"]:checked')?.value;

    const params = new URLSearchParams();
    if (fillings.length) params.append('fillings', fillings.join(','));
    if (dietary.length) params.append('dietary', dietary.join(','));
    if (size) params.append('size', size);
    if (priceRange) params.append('price', priceRange);

    window.location.href = `/categories/puff/filter?${params.toString()}`;
}

// Add event listeners to all filter inputs
document.querySelectorAll('input[type="checkbox"], input[type="radio"]').forEach(input => {
    input.addEventListener('change', applyFilters);
});
</script> 